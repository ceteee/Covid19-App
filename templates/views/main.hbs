<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="description" content="covid-19 Information">
        <meta name="keyword" content="covid-19 Indonesia">
        <meta name="author" content="Christian">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>Covid-19 Indonesia</title>
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;600;900&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="//cdn.jsdelivr.net/chartist.js/latest/chartist.min.css">
        <script src="//cdn.jsdelivr.net/chartist.js/latest/chartist.min.js"></script>

        <link rel="icon" type="image/png" href="/img/favicon.png">

        <link rel="stylesheet" type="text/css" href="/css/styles.css">
    </head>
<body>
    <!-- header -->
    {{>header}}

    <div id="container">
      <div class="data">
        <div class="description">
          <h3 class="heading-1">Indonesian Real-Time Data covid-19</h3>
          <h1>Total Case confirmed: {{ lc }}</h1>
          <h1>Total recovered : {{ lr }}</h1>
          <h1>Total Death : {{ ld }}</h1>
          <h1>Percentage recovered : {{pr}} %</h1>
        <div class="chart">
            <canvas id="myChart" width="400" height="400"></canvas>
        </div>
        </div>
      </div>

    </div>


    
    <!-- footer -->
    {{>footer}}
    <noscript>!This browser doesn't support javascript!</noscript>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
    <script src="/js/app.js"></script>
    <script>
    var date = "{{tanggal}}";
    var confirmed = "{{kasus}}";

    
  

    const arr1 = date.split(',')
    const arr2 = confirmed.split(',')
    var resultConfirmed = arr2.map(Number);

    console.log(resultConfirmed)

     var ctx = document.getElementById('myChart').getContext('2d');
        var chart = new Chart(ctx, {
            // The type of chart we want to create
            type: 'line',

            // The data for our dataset
            data: {
                labels: arr1,
                datasets: [{
                    label: 'Confirmed Case covid-19 all of the time in Indonesia',
                    backgroundColor: 'rgb(255, 99, 132)',
                    borderColor: 'rgb(255, 99, 132)',
                    data: resultConfirmed
                }]
            },

            // Configuration options go here
            options: {}
        });
    </script>
</body>

</html>